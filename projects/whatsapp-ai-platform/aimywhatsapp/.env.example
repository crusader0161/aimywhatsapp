# ============================================================
# Aimywhatsapp â€” Environment Variables
# Copy this to .env and fill in your values
# ============================================================

# App
NODE_ENV=development
API_PORT=3001
WEB_PORT=3000
APP_URL=http://localhost:3000
API_URL=http://localhost:3001

# Database
DB_NAME=aimywhatsapp
DB_USER=aimybot
DB_PASSWORD=changeme
DATABASE_URL=postgresql://aimybot:changeme@localhost:5432/aimywhatsapp

# Redis
REDIS_PASSWORD=changeme
REDIS_URL=redis://:changeme@localhost:6379

# Qdrant
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=

# JWT Secrets (generate with: openssl rand -hex 32)
JWT_ACCESS_SECRET=replace_with_64_char_random_hex
JWT_REFRESH_SECRET=replace_with_different_64_char_random_hex

# Encryption key for WA credentials (generate with: openssl rand -hex 16)
ENCRYPTION_KEY=replace_with_32_char_hex

# AI Providers
ANTHROPIC_API_KEY=sk-ant-...
OPENAI_API_KEY=sk-...       # Optional - used for embeddings fallback

# Default AI Model
DEFAULT_AI_MODEL=claude-sonnet-4-5-20250514
DEFAULT_EMBEDDING_MODEL=text-embedding-3-small

# File Storage
STORAGE_TYPE=local
STORAGE_PATH=./data/uploads
# For S3/MinIO (leave blank for local):
S3_BUCKET=
S3_REGION=ap-south-1
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_ENDPOINT=

# WhatsApp Sessions
WA_SESSION_PATH=./data/wa-sessions

# Email (optional - for password reset)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=noreply@aimywhatsapp.com

# Rate Limiting
RATE_LIMIT_MAX=200
RATE_LIMIT_WINDOW_MS=60000

# Logging
LOG_LEVEL=info

# Optional: Sentry error tracking
SENTRY_DSN=
